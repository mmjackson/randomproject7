<h1>Listing books</h1>

<table class='table'>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.year %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?', <button type="button" class="btn btn-default">Default</button>} %></td>
  </tr>
<% end %>
</table>

